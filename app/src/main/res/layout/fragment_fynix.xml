<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    tools:context=".ui.fragments.FynixFragment">

    <!-- Upload Status Banner -->
    <TextView
        android:id="@+id/uploadStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:gravity="center"
        android:visibility="gone"
        android:background="@drawable/status_banner_background"
        android:elevation="8dp" />

    <!-- Messages Container -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/messagesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="18dp"
        android:clipToPadding="false"
        android:background="#000000"
        android:scrollbars="none"
        android:overScrollMode="never" />

    <!-- Loading Indicator for Chat -->
    <LinearLayout
        android:id="@+id/loadingContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:background="#000000"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:elevation="8dp">

        <ProgressBar
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="16dp"
            android:indeterminateTint="#2196F3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fynix is thinking..."
            android:textColor="#B0B0B0"
            android:textSize="15sp"/>

    </LinearLayout>

    <!-- Input Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp"
        android:gravity="center_vertical"
        android:background="@drawable/input_container_bg"
        android:elevation="8dp"
        android:layout_margin="8dp">


    <EditText
            android:id="@+id/messageEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Ask about your finances..."
            android:textColor="#FFFFFF"
            android:textColorHint="#777777"
            android:textSize="16sp"
            android:background="@color/black"
            android:padding="16dp"
            android:layout_marginEnd="16dp"
            android:maxLines="3"
            android:elevation="2dp"
            android:inputType="textMultiLine|textCapSentences" />

        <Button
            android:id="@+id/sendButton"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:text="Send"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@color/black_translucent"
            android:paddingHorizontal="20dp"
            android:minWidth="0dp"
            android:elevation="4dp"
            android:enabled="true" />

    </LinearLayout>

</LinearLayout>