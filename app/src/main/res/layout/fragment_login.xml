<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    tools:context=".Authentication.login.LoginFragment">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- App Logo -->
        <ImageView
            android:id="@+id/iv_app_logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="24dp"
            android:contentDescription="@string/app_logo"
            android:src="@mipmap/ic_launcher" />

        <!-- App Name -->
        <TextView
            android:id="@+id/tv_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:letterSpacing="0.02"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold" />

        <!-- Login Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp">

                <!-- Welcome Text -->
                <TextView
                    android:id="@+id/tv_welcome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/welcome_back"
                    android:textColor="@color/primary_text_dark"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <!-- Subtitle -->
                <TextView
                    android:id="@+id/tv_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="32dp"
                    android:gravity="center"
                    android:text="@string/sign_in_to_continue_journey"
                    android:textColor="@color/secondary_text_dark"
                    android:textSize="14sp" />

                <!-- OR Divider -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/divider_dark" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:text="@string/or"
                        android:textColor="@color/secondary_text_dark"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/divider_dark" />

                </LinearLayout>


                <!-- Google Sign-in Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_google_signin"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:contentDescription="@string/sign_in_with_google"
                    android:visibility="visible"
                    app:backgroundTint="@color/google_button_dark"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_google"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="24dp"
                    app:iconTint="@null"
                    app:strokeColor="@color/google_stroke_dark"
                    app:strokeWidth="1dp"
                    tools:visibility="visible" />

                <!-- Sign Out Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_sign_out"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/sign_out"
                    android:textAllCaps="false"
                    android:textColor="@color/sign_out_text_dark"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:backgroundTint="@color/sign_out_background_dark"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_logout"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:iconSize="20dp"
                    app:iconTint="@color/sign_out_text_dark"
                    app:strokeColor="@color/sign_out_stroke_dark"
                    app:strokeWidth="1dp"
                    tools:visibility="visible" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</FrameLayout>