<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/dialog_background"
    android:padding="0dp">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_medium"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_budget"
                app:tint="@android:color/white"
                android:contentDescription="Budget icon"
                android:layout_marginEnd="@dimen/spacing_small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Budget"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_title"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Close Button -->
        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_close_white"
            app:tint="@android:color/white"
            android:contentDescription="Close dialog"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/spacing_small" />

    </LinearLayout>

    <!-- Content Section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_large">

            <!-- Budget Category Section -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_budget_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:hint="Budget Category"
                app:boxStrokeColor="@color/accent"
                app:hintTextColor="@color/accent"
                app:startIconTint="@color/accent"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_budget_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_body" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Amount Section -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_budget_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:hint="Budget Amount"
                app:boxStrokeColor="@color/accent"
                app:hintTextColor="@color/accent"
                app:startIconTint="@color/accent"
                app:prefixText="â‚¹ "
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_budget_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_body" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Date Range Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Budget Period"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_body"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/spacing_small" />

            <!-- Date Range Section with improved design -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/spacing_medium">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/spacing_small">

                    <ImageView
                        android:layout_width="@dimen/icon_small"
                        android:layout_height="@dimen/icon_small"
                        android:src="@drawable/ic_calendar"
                        app:tint="@color/accent"
                        android:contentDescription="Date range icon"
                        android:layout_marginEnd="@dimen/spacing_small" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Budget Period"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_body"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Date Fields Container -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <!-- Start Date -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_start_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/spacing_small"
                        android:hint="Start Date"
                        app:boxStrokeColor="@color/accent"
                        app:hintTextColor="@color/accent"
                        app:startIconTint="@color/accent"
                        app:endIconMode="custom"
                        app:startIconDrawable="@drawable/ic_calendar"
                        app:endIconTint="@color/text_secondary"
                        app:helperText="Select start date"
                        app:helperTextTextColor="@color/text_hint"
                        app:errorEnabled="true"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_start_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:clickable="true"
                            android:cursorVisible="false"
                            android:inputType="none"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_body"
                            android:drawablePadding="@dimen/spacing_small"
                            android:background="@android:color/transparent"
                            tools:text="Jan 01, 2024" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Date Range Connector -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:orientation="vertical"
                        android:gravity="center">

                        <View
                            android:layout_width="16dp"
                            android:layout_height="2dp"
                            android:background="@color/text_hint"
                            android:layout_marginVertical="2dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="to"
                            android:textColor="@color/text_hint"
                            android:textSize="10sp" />

                    </LinearLayout>

                    <!-- End Date -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_end_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/spacing_small"
                        android:hint="End Date"
                        app:boxStrokeColor="@color/accent"
                        app:hintTextColor="@color/accent"
                        app:startIconDrawable="@drawable/ic_calendar"
                        app:startIconTint="@color/accent"
                        app:endIconMode="custom"
                        app:endIconTint="@color/text_secondary"
                        app:helperText="Select end date"
                        app:helperTextTextColor="@color/text_hint"
                        app:errorEnabled="true"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_end_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:clickable="true"
                            android:cursorVisible="false"
                            android:inputType="none"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_body"
                            android:drawablePadding="@dimen/spacing_small"
                            android:background="@android:color/transparent"
                            tools:text="Jan 31, 2024" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>


            </LinearLayout>

            <!-- Optional Description Section -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_budget_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_large"
                android:hint="Description (Optional)"
                app:boxStrokeColor="@color/accent"
                app:hintTextColor="@color/accent"
                app:startIconTint="@color/accent"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_budget_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:maxLines="4"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_body"
                    android:gravity="top" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="@dimen/spacing_medium">

                <!-- Cancel Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:textColor="@color/text_secondary"
                    android:layout_marginEnd="@dimen/spacing_medium"
                    app:strokeColor="@color/text_secondary"
                    app:strokeWidth="1dp"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

                <!-- Save Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save Budget"
                    android:textColor="@android:color/white"
                    app:backgroundTint="@color/accent"
                    app:icon="@drawable/ic_save"
                    app:iconTint="@android:color/white"
                    style="@style/Widget.Material3.Button" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>