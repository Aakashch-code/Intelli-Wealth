<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".ui.fragments.ReportsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Header -->
            <TextView
                android:id="@+id/tvExportTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Export Reports"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvExportSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select data to export as PDF or CSV"
                android:textColor="#999999"
                android:textSize="14sp"
                android:layout_marginBottom="32dp" />

            <!-- Export Items Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="#1A1A1A"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Data"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Income Checkbox -->
                    <CheckBox
                        android:id="@+id/cbIncome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Income"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:buttonTint="#4CAF50"
                        android:padding="12dp"
                        android:layout_marginBottom="8dp" />

                    <!-- Expense Checkbox -->
                    <CheckBox
                        android:id="@+id/cbExpense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Expense"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:buttonTint="#F44336"
                        android:padding="12dp"
                        android:layout_marginBottom="8dp" />

                    <!-- Budget Checkbox -->
                    <CheckBox
                        android:id="@+id/cbBudget"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Budget"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:buttonTint="#2196F3"
                        android:padding="12dp"
                        android:layout_marginBottom="8dp" />

                    <!-- Subscription Checkbox -->
                    <CheckBox
                        android:id="@+id/cbSubscription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Subscription"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:buttonTint="#FF9800"
                        android:padding="12dp"
                        android:layout_marginBottom="8dp" />

                    <!-- Goal Checkbox -->
                    <CheckBox
                        android:id="@+id/cbGoal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Goal"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:buttonTint="#9C27B0"
                        android:padding="12dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Date Range Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="#1A1A1A"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date Range"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <!-- Start Date -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Start Date"
                                android:textColor="#999999"
                                android:textSize="12sp"
                                android:layout_marginBottom="8dp" />

                            <Button
                                android:id="@+id/btnStartDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Select Date"
                                android:textColor="#FFFFFF"
                                android:backgroundTint="#2A2A2A"
                                android:textAllCaps="false" />

                        </LinearLayout>

                        <!-- End Date -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="End Date"
                                android:textColor="#999999"
                                android:textSize="12sp"
                                android:layout_marginBottom="8dp" />

                            <Button
                                android:id="@+id/btnEndDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Select Date"
                                android:textColor="#FFFFFF"
                                android:backgroundTint="#2A2A2A"
                                android:textAllCaps="false" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Export Format Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="#1A1A1A"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Export Format"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <RadioGroup
                        android:id="@+id/rgExportFormat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rbPdf"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="PDF"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:buttonTint="#4CAF50"
                            android:checked="true"
                            android:padding="12dp" />

                        <RadioButton
                            android:id="@+id/rbCsv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="CSV"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:buttonTint="#4CAF50"
                            android:padding="12dp" />

                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Export Button -->
            <Button
                android:id="@+id/btnExport"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Export Reports"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#4CAF50"
                android:textAllCaps="false"
                app:cornerRadius="12dp" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>