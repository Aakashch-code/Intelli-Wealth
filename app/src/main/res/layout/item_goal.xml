<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="8dp"
    app:strokeColor="@color/primary_blue"
    app:cardBackgroundColor="#000000"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="16dp">

            <!-- Goal Icon -->
            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circular_icon_background"
                android:gravity="center"
                android:layout_marginEnd="12dp">

                <ImageView
                    android:id="@+id/ivGoalIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_star"
                    app:tint="#2196F3"
                    android:contentDescription="Goal icon" />
            </LinearLayout>

            <!-- Goal Name -->
            <TextView
                android:id="@+id/tvGoalName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#FFFFFF"
                android:letterSpacing="0.01"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Priority Badge -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/priority_badge_background"
                android:paddingHorizontal="10dp"
                android:paddingVertical="6dp"
                android:layout_marginStart="8dp">

                <View
                    android:id="@+id/priorityDot"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:background="@drawable/priority_dot"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/tvPriority"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#E0E0E0"
                    android:letterSpacing="0.05"
                    android:textAllCaps="true" />
            </LinearLayout>

        </LinearLayout>

        <!-- Amount Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <!-- Saved Amount -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SAVED"
                    android:textSize="10sp"
                    android:textColor="#808080"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.1"
                    android:paddingBottom="4dp" />

                <TextView
                    android:id="@+id/tvSavedAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#4CAF50"
                    android:letterSpacing="-0.02"
                    android:includeFontPadding="false" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#2A2A2A"
                android:layout_marginHorizontal="16dp" />

            <!-- Target Amount -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TARGET"
                    android:textSize="10sp"
                    android:textColor="#808080"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.1"
                    android:paddingBottom="4dp" />

                <TextView
                    android:id="@+id/tvTargetAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#E0E0E0"
                    android:letterSpacing="-0.01"
                    android:includeFontPadding="false" />

            </LinearLayout>

        </LinearLayout>

        <!-- Progress Bar Section -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp">

            <!-- Background Track -->
            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="@drawable/progress_background"
                android:layout_centerVertical="true" />

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/progress_drawable"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <!-- Footer Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Progress Percentage -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <View
                    android:layout_width="3dp"
                    android:layout_height="12dp"
                    android:background="#2196F3"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvProgressPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#2196F3"
                    android:letterSpacing="0.01" />

                <TextView
                    android:id="@+id/tvRemainingAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:fontFamily="sans-serif"
                    android:textColor="#808080"
                    android:letterSpacing="0.01"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Target Date -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_calendar"
                    android:layout_marginEnd="6dp"
                    app:tint="#808080"
                    android:contentDescription="Calendar" />

                <TextView
                    android:id="@+id/tvTargetDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#B0B0B0"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.01" />

            </LinearLayout>

        </LinearLayout>

        <!-- Achievement Badge (visible when goal is completed) -->
        <LinearLayout
            android:id="@+id/achievementBadge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/achievement_background"
            android:paddingVertical="10dp"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_trophy"
                android:layout_marginEnd="8dp"
                app:tint="#FFD700"
                android:contentDescription="Trophy" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Goal Achieved!"
                android:textColor="#FFD700"
                android:fontFamily="sans-serif-medium"
                android:textSize="13sp"
                android:letterSpacing="0.02" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>