<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="#121212"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeColor="#1F1F1F"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#FFFFFF" />

            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_edit"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="10dp"
                app:tint="#60A5FA" />

            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="10dp"
                app:tint="#F87171" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvPeriod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textSize="13sp"
            android:textColor="#9CA3AF"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.02" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progressBar"
            style="@style/Widget.Material3.LinearProgressIndicator"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginVertical="16dp"
            android:layout_marginHorizontal="8dp"
            app:trackCornerRadius="8dp"
            app:trackThickness="8dp"
            app:indicatorColor="@color/primary_blue"
            app:trackColor="#222222"
            app:showAnimationBehavior="inward"
            app:hideAnimationBehavior="outward"
            app:indicatorDirectionLinear="leftToRight"
            android:elevation="4dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="start">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ALLOCATED"
                    android:textSize="10sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#6B7280"
                    android:letterSpacing="0.05" />

                <TextView
                    android:id="@+id/tvAllocated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="$0.00"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#60A5FA" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/spent"
                    android:textSize="10sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#6B7280"
                    android:letterSpacing="0.05" />

                <TextView
                    android:id="@+id/tvSpent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="$0.00"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#F87171" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/remaining"
                    android:textSize="10sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#6B7280"
                    android:letterSpacing="0.05" />

                <TextView
                    android:id="@+id/tvRemaining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="$0.00"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#4ADE80" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"
            android:background="#1F1F1F" />

        <TextView
            android:id="@+id/tvUpdateSpent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="12dp"
            android:text="Update Budget Amount"
            android:textSize="13sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#60A5FA"
            android:letterSpacing="0.02"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>