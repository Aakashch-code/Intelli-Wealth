<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/toolbar"
    tools:context=".ui.budget.BudgetFragment">

    <!-- ScrollView for main content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorSurface"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_medium">

            <!-- Budget Summary Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_budget_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:elevation="@dimen/card_elevation"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="@dimen/spacing_large">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_medium">

                    <!-- Budget Summary Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/spacing_small">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_wallet"
                            app:tint="@color/accent"
                            android:contentDescription="@string/wallet_icon_description"
                            android:layout_marginEnd="@dimen/spacing_small" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/monthly_budget"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_title"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Budget Numbers -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/spacing_small">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/total_budget"
                                android:textColor="@color/text_secondary"
                                android:textSize="@dimen/text_caption" />

                            <TextView
                                android:id="@+id/tv_total_budget"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sample_total_budget"
                                android:textColor="@color/text_primary"
                                android:textSize="@dimen/text_large"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/spent"
                                android:textColor="@color/text_secondary"
                                android:textSize="@dimen/text_caption" />

                            <TextView
                                android:id="@+id/tv_amount_spent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sample_spent"
                                android:textColor="@color/error"
                                android:textSize="@dimen/text_large"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/remaining"
                                android:textColor="@color/text_secondary"
                                android:textSize="@dimen/text_caption" />

                            <TextView
                                android:id="@+id/tv_remaining_budget"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sample_remaining"
                                android:textColor="@color/success"
                                android:textSize="@dimen/text_large"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Progress Bar -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ProgressBar
                            android:id="@+id/progress_budget"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:progress="65"
                            android:progressTint="@color/accent"
                            android:progressBackgroundTint="@color/progress_background"
                            android:layout_marginBottom="@dimen/spacing_small" />

                        <TextView
                            android:id="@+id/tv_budget_percentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sample_budget_percentage"
                            android:textColor="@color/text_secondary"
                            android:textSize="@dimen/text_caption"
                            android:layout_gravity="end" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Category Breakdown Header -->
            <LinearLayout
                android:id="@+id/category_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/spacing_small"
                android:gravity="center_vertical"
                app:layout_constraintTop_toBottomOf="@id/card_budget_summary"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/budget_categories"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_headline"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_view_toggle"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_grid_view"
                    app:tint="@color/accent"
                    android:contentDescription="@string/toggle_view_description"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:padding="@dimen/spacing_small" />

            </LinearLayout>

            <!-- Budget Categories Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/budgetCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="@dimen/card_corner_radius_large"
                app:strokeColor="@color/card_stroke"
                app:strokeWidth="1dp"
                app:layout_constraintTop_toBottomOf="@id/category_header"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="@dimen/spacing_large">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_large">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/budget_categories"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_title"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/viewAllBudgets"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/view_all"
                            android:textColor="@color/success"
                            android:textSize="@dimen/text_caption" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/budgetRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        tools:itemCount="3"
                        tools:listitem="@layout/item_budget" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Monthly Overview Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_monthly_overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:elevation="@dimen/card_elevation"
                app:layout_constraintTop_toBottomOf="@id/budgetCard"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="@dimen/spacing_large">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_medium">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/spacing_small"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_bar_chart"
                            app:tint="@color/accent"
                            android:contentDescription="@string/chart_icon_description"
                            android:layout_marginEnd="@dimen/spacing_small" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/monthly_overview"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_title"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_toggle_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/view_chart"
                            android:textColor="@color/accent"
                            android:textSize="@dimen/text_caption"
                            android:background="?android:attr/selectableItemBackground"
                            android:padding="@dimen/spacing_small" />

                    </LinearLayout>

                    <!-- Chart Placeholder (Replace with ChartView in real implementation) -->
                    <View
                        android:id="@+id/chart_placeholder"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:background="@color/chart_background"
                        android:layout_marginBottom="@dimen/spacing_small" />

                    <!-- Quick Stats -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sample_avg_daily"
                                android:textColor="@color/success"
                                android:textSize="@dimen/text_medium"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/avg_daily"
                                android:textColor="@color/text_secondary"
                                android:textSize="@dimen/text_caption" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sample_days_left"
                                android:textColor="@color/warning"
                                android:textSize="@dimen/text_medium"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/days_left"
                                android:textColor="@color/text_secondary"
                                android:textSize="@dimen/text_caption" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sample_daily_limit"
                                android:textColor="@color/accent"
                                android:textSize="@dimen/text_medium"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/daily_limit"
                                android:textColor="@color/text_secondary"
                                android:textSize="@dimen/text_caption" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Mini FAB: Add Budget -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAddBudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="104dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_budget"
        android:contentDescription="Add Budget"
        android:visibility="gone"
        style="@style/Widget.Material3.FloatingActionButton.Secondary" />

    <!-- Main FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:background="@drawable/toolbar"
        android:src="@drawable/ic_add"
        android:contentDescription="Open menu"
        style="@style/Widget.Material3.FloatingActionButton.Primary" />

</FrameLayout>