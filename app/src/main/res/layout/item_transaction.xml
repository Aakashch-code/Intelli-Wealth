<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="#1E1E1E"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: Type, ID, and Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="12dp">

            <!-- Transaction Type Badge -->
            <TextView
                android:id="@+id/typeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.1"
                android:textAllCaps="true"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Transaction ID -->
            <TextView
                android:id="@+id/transactionIdText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#TX-4892"
                android:textColor="#808080"
                android:textSize="11sp"
                android:fontFamily="monospace"
                android:letterSpacing="0.02" />

            <!-- Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="12dp"
                android:layout_marginHorizontal="12dp"
                android:background="#404040" />

            <!-- Date -->
            <TextView
                android:id="@+id/dateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#808080"
                android:textSize="11sp"
                android:fontFamily="sans-serif"
                android:letterSpacing="0.01" />
        </LinearLayout>

        <!-- Main content: Amount and Category -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="12dp">

            <!-- Amount with accent bar -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <View
                    android:id="@+id/accentBar"
                    android:layout_width="4dp"
                    android:layout_height="24dp"
                    android:background="#4CAF50"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/amountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:fontFamily="sans-serif-light"
                    android:letterSpacing="-0.02"
                    android:includeFontPadding="false" />
            </LinearLayout>

            <!-- Category chip -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp">

                <ImageView
                    android:id="@+id/categoryIcon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="6dp"
                    app:tint="#B0B0B0"
                    android:contentDescription="Category icon" />

                <TextView
                    android:id="@+id/categoryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#E0E0E0"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.02" />
            </LinearLayout>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#2A2A2A"
            android:layout_marginVertical="8dp" />

        <!-- Footer: Payment method and note -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Payment method -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/paymentIcon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginEnd="8dp"
                    app:tint="#808080"
                    android:contentDescription="Payment method icon" />

                <TextView
                    android:id="@+id/paymentMethodText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#B0B0B0"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.01" />
            </LinearLayout>

            <!-- Note (if exists) -->
            <TextView
                android:id="@+id/noteText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#808080"
                android:textSize="11sp"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="end"
                android:letterSpacing="0.01" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>