<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0A0A0A"
    tools:context=".ui.fynix.FynixFragment">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/header_gradient_background"
        android:elevation="4dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Fynix Advisor"
            android:textSize="24sp"
            android:textColor="@color/savings_blue"
            android:textStyle="bold"
            android:letterSpacing="0.02"
            android:gravity="center" />

        <!-- Clear Chat Button -->
        <ImageButton
            android:id="@+id/clearChatButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/clear_button_background"
            android:src="@drawable/ic_clear_chat"
            android:contentDescription="Clear Chat"
            android:scaleType="centerInside"
            android:padding="8dp" />

        <!-- Upload Progress Indicator -->
        <ProgressBar
            android:id="@+id/uploadProgress"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:indeterminateTint="#00E676"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Upload Status Banner -->
    <TextView
        android:id="@+id/uploadStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:gravity="center"
        android:visibility="gone"
        android:background="@drawable/status_banner_background"
        android:elevation="2dp" />

    <!-- Messages Container -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/messagesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="18dp"
        android:clipToPadding="false"
        android:background="#0A0A0A"
        android:scrollbars="none"
        android:overScrollMode="never" />

    <!-- Loading Indicator for Chat -->
    <LinearLayout
        android:id="@+id/loadingContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:background="#111111"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:elevation="2dp">

        <ProgressBar
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="16dp"
            android:indeterminateTint="#2196F3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fynix is thinking..."
            android:textColor="#B0B0B0"
            android:textSize="15sp"/>

    </LinearLayout>

    <!-- Input Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp"
        android:background="@drawable/input_section_background"
        android:elevation="8dp"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/messageEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Ask about your finances..."
            android:textColor="#FFFFFF"
            android:textColorHint="#777777"
            android:textSize="16sp"
            android:background="@drawable/gradient_background"
            android:padding="16dp"
            android:layout_marginEnd="16dp"
            android:maxLines="3"
            android:elevation="2dp"
            android:inputType="textMultiLine|textCapSentences" />

        <Button
            android:id="@+id/sendButton"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:text="Send"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@color/black_translucent"
            android:paddingHorizontal="20dp"
            android:minWidth="0dp"
            android:elevation="4dp"
            android:enabled="true" />

    </LinearLayout>

</LinearLayout>