<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0E27">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update Amount"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp" />

        </LinearLayout>

        <!-- Spent Amount Card -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/rounded_background_orange"
            android:padding="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_inner_background_dark"
                android:padding="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_expense"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Expense icon"
                        app:tint="#FFB74D" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Amount Spent"
                        android:textSize="13sp"
                        android:textColor="#FFB74D"
                        android:textStyle="bold" />

                </LinearLayout>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etSpent"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="₹0.00"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#666E8F"
                    android:background="@null"
                    android:inputType="numberDecimal"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:gravity="start|center_vertical" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#666E8F"
                    android:layout_marginTop="12dp"
                    android:alpha="0.3" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter the total amount you've spent"
                    android:textSize="12sp"
                    android:textColor="#999AAF"
                    android:layout_marginTop="12dp" />

            </LinearLayout>

        </FrameLayout>
        <!-- Spent Amount Card -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/rounded_background_orange"
            android:padding="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_inner_background_dark"
                android:padding="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_expense"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Expense icon"
                        app:tint="#FFB74D" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Amount Allocate"
                        android:textSize="13sp"
                        android:textColor="#FFB74D"
                        android:textStyle="bold" />

                </LinearLayout>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etallocate"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="₹0.00"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#666E8F"
                    android:background="@null"
                    android:inputType="numberDecimal"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:gravity="start|center_vertical" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#666E8F"
                    android:layout_marginTop="12dp"
                    android:alpha="0.3" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter the total amount you want to allocate"
                    android:textSize="12sp"
                    android:textColor="#999AAF"
                    android:layout_marginTop="12dp" />

            </LinearLayout>

        </FrameLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConfirm"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Confirm Expense"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#FFB74D"
                android:textColor="#0A0E27"
                android:elevation="8dp"
                style="@style/Widget.MaterialComponents.Button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Cancel"
                android:textSize="16sp"
                android:textColor="#FFB74D"
                android:strokeColor="#FFB74D"
                android:strokeWidth="2"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>